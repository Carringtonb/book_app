<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Book Collection</title>
    <link href="./styles/base.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <main>
      <h4>Search by Title or Author</h4>
      <form action="/searches" method="post">
        <input type="text" name="search" placeholder="Enter a title or author" required>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="radio" name="search" value="title" required>
          </label>
        </fieldset>
        <fieldset>
          <label for="author">
            <span>Author</span>
            <input type="radio" name="search" value="author" required>
          </label>
        </fieldset>
        <button type="submit">Search the Google Books API</button>
      </form>
      <section>
        <ul>
          <% bookArray.forEach(book =>{ %>
            <li><%= book.title %></li>
            <li><%= book.author %></li>
            <li class="book-detail"><a href='/books/<%= book.id %>'>more details</a></li>
            <li>Total Books : <%= bookArray.length %></li>
         <%  }) %>
        </ul>
      </section>
    </main>
  </body>
</html>